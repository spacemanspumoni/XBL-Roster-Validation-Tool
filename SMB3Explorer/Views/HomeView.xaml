<UserControl x:Class="SMB3Explorer.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:viewModels="clr-namespace:SMB3Explorer.ViewModels"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance viewModels:HomeViewModel}"
             VerticalAlignment="Stretch">
    <StackPanel VerticalAlignment="Stretch">
        <Grid Height="Auto" Width="Auto" MinHeight="500" MinWidth="800" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="200" />
                <ColumnDefinition Width="4*" MinWidth="200" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <DockPanel IsEnabled="{Binding InteractionEnabled}">
                <StackPanel DockPanel.Dock="Top"
                            Orientation="Vertical"
                            VerticalAlignment="Stretch">
                    <Label HorizontalAlignment="Stretch"
                           Content="Select a team:" />
                    <ComboBox
                        HorizontalAlignment="Stretch"
                        Height="25"
                        DisplayMemberPath="TeamName"
                        ItemsSource="{Binding Teams}"
                        SelectedItem="{Binding SelectedTeam}" />

                    <Label
                        Visibility="{Binding NoFranchiseSeasonsVisibility}"
                        Content="No seasons exist for this franchise"
                        Foreground="Red"
                        FontWeight="Bold" />
                </StackPanel>

            </DockPanel>

            <DataGrid Name="Pitchers" ItemsSource="{Binding}" AutoGenerateColumns="False" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" ColumnWidth="*">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"  Binding="{Binding PlayerName}"/>
                    <DataGridTextColumn Header="Pos"/>
                    <DataGridTextColumn Header="Bat"/>
                    <DataGridTextColumn Header="Throw"/>
                    <DataGridTextColumn Header="Pow"/>
                    <DataGridTextColumn Header="Con"/>
                    <DataGridTextColumn Header="Spd"/>
                    <DataGridTextColumn Header="Fld"/>
                    <DataGridTextColumn Header="Vel"/>
                    <DataGridTextColumn Header="Jnk"/>
                    <DataGridTextColumn Header="Acc"/>
                    <DataGridTextColumn Header="Arm"/>
                    <DataGridTextColumn Header="Chemistry"/>
                    <DataGridTextColumn Header="Trait 1"/>
                    <DataGridTextColumn Header="Trait 2"/>
                    <DataGridTextColumn Header="4F"/>
                    <DataGridTextColumn Header="2F"/>
                    <DataGridTextColumn Header="CF"/>
                    <DataGridTextColumn Header="CH"/>
                    <DataGridTextColumn Header="CB"/>
                    <DataGridTextColumn Header="SL"/>
                    <DataGridTextColumn Header="FK"/>
                    <DataGridTextColumn Header="SB"/>
                    <DataGridTextColumn Header="Angle"/>
                </DataGrid.Columns>
            </DataGrid>

            <DataGrid Name="Players" ItemsSource="{Binding}" AutoGenerateColumns="False" Grid.Column="1" Grid.Row="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"  Binding="{Binding PlayerName}"/>
                    <DataGridTextColumn Header="Pos"/>
                    <DataGridTextColumn Header="Bat"/>
                    <DataGridTextColumn Header="Throw"/>
                    <DataGridTextColumn Header="Pow"/>
                    <DataGridTextColumn Header="Con"/>
                    <DataGridTextColumn Header="Spd"/>
                    <DataGridTextColumn Header="Fld"/>
                    <DataGridTextColumn Header="Arm"/>
                    <DataGridTextColumn Header="Chemistry"/>
                    <DataGridTextColumn Header="Trait 1"/>
                    <DataGridTextColumn Header="Trait 2"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </StackPanel>
</UserControl>